<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"

    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <TextView

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:textSize="18sp"

        android:text="@string/titventas"

        android:textStyle="bold"/>

    <EditText

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:hint="@string/fecha_venta"

        android:id="@+id/txt_fecha_venta"

        android:inputType="text"/>



    <TableLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TableRow

            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <EditText

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:hint="@string/golosinas"

                android:id="@+id/txt_golosinas"

                android:inputType="number"/>

            <EditText

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:hint="@string/aseo"

                android:id="@+id/txt_aseo"

                android:inputType="number"/>

            <EditText

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:hint="@string/escolares"

                android:id="@+id/txt_escolares"

                android:inputType="number"/>

        </TableRow>

    </TableLayout>

    <TableLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TableRow

            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <Button

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:text="@string/guardar"

                android:id="@+id/btnGuardar"

                android:onClick="metodo"/>

            <Button

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:text="@string/consultar"

                android:id="@+id/btnConsultar"

                android:onClick="metodoCons"/>

            <Button

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:text="@string/modificar"

                android:id="@+id/btnModificar"

                android:onClick="modificar"/>


            <Button

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:text="@string/eliminar"

                android:id="@+id/btnEliminar"

                android:onClick="eliminardatos"/>






        </TableRow>

        <Button

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:text="@string/borracampos"

            android:id="@+id/btnlimpiarCam"

            android:onClick="metodoCons"/>


        <TextView

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:id="@+id/resultado"/>

    </TableLayout>

</LinearLayout>